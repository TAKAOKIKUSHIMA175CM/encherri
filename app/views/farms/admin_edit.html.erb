<div class="container">
  <%= form_for @farm, url: update_admin_farm_path do |f| %>
	<div class="row">
	  	<div class="col-12">
			<h1 class="text-center my-4">管理者farm編集</h1>
		</div>
	 </div>

	<!-- Farm編集 -->
	<div class="row">
		<div class="col-12">
			<h3 class="my-5">Farm</h3>
				<div class="row">
					<div class="col-4">
						<p class="text-center">農園名</p>
					</div>
					<div class="col-8">
						<p class="text-center"><%= f.text_field :farm_name %></p>
						<hr>
					</div>
				</div>

				<div class="row">
					<div class="col-4">
						<p class="text-center">主な営業</p>
					</div>
					<div class="col-8">
						<p class="text-center"><%= f.text_field :business_day %></p>
						<hr>
					</div>
				</div>

				<div class="row">
					<div class="col-4">
						<p class="text-center">入園料金</p>
					</div>
					<div class="col-8">
						<p class="text-center"><%= f.text_field :price %>円</p>
						<hr>
					</div>
				</div>

				<div class="row">
					<div class="col-4">
						<p class="text-center">地域</p>
					</div>
					<div class="col-8">
						<p class="text-center"><%= f.collection_select :area_id, Area.all, :id, :todoufuken %></p>
						<hr>
					</div>
				</div>

				<div class="row">
					<div class="col-4">
						<p class="text-center">イメージ画像選択</p>
					</div>
					<div class="col-8">
						<!-- 編集の場合はサイズは指定せず、以下の書き方で書く -->
						<p class="image-text text-center"><%= f.attachment_field :farm_image %></p>
						<hr>
					</div>
				</div>


				<div class="row">
					<div class="col-4">
						<p class="text-center">農園の特徴</p>
					</div>
					<div class="col-8">
						<p class="text-center"><%= f.text_field :feature %></p>
						<hr>
						<%= f.submit "更新", class: "btn btn-primary btn-block" %>
					</div>
				</div>
		</div>
	</div>
  <% end %>
</div>