<!-- Cherry -->
<div class="container">
  <div class="row">
    <div class="col-3">
      <h3 class="text-center my-5">Cherries</h3>

      <!-- 1品種の説明 -->
      <img src="assets/cherries1.jpg" height="80" width="110" class="rounded mx-auto d-block">
      <p class="text-center">紅秀峰</p>

      <!-- 1品種の説明 -->
      <img src="assets/cherries1.jpg" height="80" width="110" class="rounded mx-auto d-block">
      <p class="text-center">紅秀峰</p>

      <!-- 1品種の説明 -->
      <img src="assets/cherries1.jpg" height="80" width="110" class="rounded mx-auto d-block">
      <p class="text-center">紅秀峰</p>

      <!-- 1品種の説明 -->
      <img src="assets/cherries1.jpg" height="80" width="110" class="rounded mx-auto d-block">
      <p class="text-center">紅秀峰</p>

      <!-- 1品種の説明 -->
      <img src="assets/cherries1.jpg" height="80" width="110" class="rounded mx-auto d-block">
      <p class="text-center">紅秀峰</p>
    </div>

    <!-- farm -->
  <div class="col-9">
      <h3 class="text-center my-5">Farms</h3>
      <% @farms.each do |farm| %>
      <div class="row">
          <div class="col-3">
            <img src="assets/cherries1.jpg" height="120" width="150">
          </div>
          <div class="col-5">
            <div style="height: 40px; width: 300px">
              <p><%= farm.farm_name %></p>
            </div>
            <div style="height: 40px; width: 300px">
              <p>住所 : <%= farm.user.address %></p>
            </div>
            <div style="height: 40px; width: 300px">
              <p>営業期間 : <%= farm.business_day %></p>
            </div>
          </div>
        <div class="col-4">
            <div style="height: 40px; width: 200px">
            </div>
            <div style="height: 40px; width: 200px">
              <p>入園料 : <%= farm.price %>円</p>
            </div>
            <!-- ファームに紐づくcherryを持ってくるので変数を定義しなくても以下の書き方でいける -->
            <!-- farmから見てcherryは 1:N なので　farm.cherries でeach文を回す -->
            <% farm.cherries.each do |cherry| %>
              <div style="height: 40px; width: 200px">
                <p>品種 : <%= cherry.cherry_name %></p>
              </div>
            <% end %>
        </div>
      </div>
      <hr>
      <% end %>

      <div class="pagination">
                <p>prev</p>
                <p>1</p>
                <p>2</p>
                <p>3</p>
                <p>4</p>
                <p>5</p>
                <p>next</p>
      </div>
  </div>
</div>
