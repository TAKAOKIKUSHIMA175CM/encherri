            <!-- cherry情報 -->
    <div class="container">
            <h3 class="my-5">Cherry</h3>
                <div class="row">
                    <div class="col-4">
                    <%= form_for [@farm, @cherry], url: cherries_path do |f| %>
                        <br>
                        <p class="text-center">主力品種入力</p>
                    </div>
                    <div class="col-8">
                        <p>＊主な取り扱い品種名を１つ入力して下さい。
                        <%= f.text_field :cherry_name, :size=>"80" %>
                        <%= f.hidden_field :farm_id, :value => @farm.id %>
                        <hr>
                        <%= f.submit '登録' %>
                    </div>
                    <% end %>
                </div>
    </div>


